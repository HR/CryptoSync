{
  "name": "Crypto.Sync",
  "productName": "CryptoSync",
  "version": "0.1.0",
  "description": "A cross-platform end-to-end encryption cloud sync client",
  "license": "MIT",
  "repository": "HR/CryptoSync",
  "author": {
    "name": "Habib Rehman",
    "email": "Habib.R@outlook.com",
    "url": "https://git.io/HR"
  },
  "engines": {
    "node": ">=4"
  },
  "electronVersion": "*",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register",
    "coverage": "./node_modules/.bin/babel-node ./node_modules/.bin/isparta cover --root src/ ./node_modules/.bin/_mocha --reporter mocha-lcov-reporter",
    "precoveralls": "npm run coverage",
    "coveralls": "coveralls < coverage/lcov.info",
    "start": "./node_modules/gulp/bin/gulp.js",
    "build": "electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --prune --asar --all --version=$npm_package_electronVersion"
  },
  "xo": {
    "esnext": true
  },
  "keywords": [
    "cloud",
    "sync",
    "encryption",
    "crypto",
    "end-to-end",
    "client",
    "drive",
    "dropbox"
  ],
  "dependencies": {
    "async": "*",
    "babel-core": "*",
    "base64-stream": "*",
    "chokidar": "*",
    "coveralls": "^2.11.9",
    "dotenv": "^2.0.0",
    "electron-debug": "*",
    "electron-positioner": "*",
    "electron-prebuilt": "*",
    "fs-extra": "*",
    "fstream": "*",
    "google-auth-library": "*",
    "googleapis": "*",
    "handlebars": "*",
    "jquery": "*",
    "level-js": "*",
    "leveldown": "*",
    "levelup": "*",
    "lodash": "*",
    "mocha": "^2.4.5",
    "moment": "*",
    "querystring": "*",
    "secrets.js": "*",
    "tar": "*"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-eslint": "*",
    "babel-preset-es2015": "*",
    "chai": "*",
    "chromedriver": "*",
    "coveralls": "^2.11.9",
    "electron-packager": "*",
    "eslint": "*",
    "eslint-plugin-html": "*",
    "gulp": "*",
    "gulp-shell": "*",
    "isparta": "^4.0.0",
    "jshint": "*",
    "mocha-lcov-reporter": "^1.2.0",
    "webdriverio": "*",
    "xo": "*"
  },
  "optionalDependencies": {
    "selenium-webdriver": "*",
    "gulp-mocha": "*",
    "dropbox": "*",
    "event-kit": "*",
    "less": "*",
    "prr": "*"
  }
